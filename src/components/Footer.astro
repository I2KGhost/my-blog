---
import { SOCIAL_LINKS } from '../consts';

const today = new Date();
---

<footer>
	&copy; {today.getFullYear()} Ivaylo Kolev. All rights reserved.
	<div class="social-links">
		{
			SOCIAL_LINKS.map((link) => (
				<a href={link.href} target="_blank" rel="noreferrer noopener" aria-label={link.label}>
					{link.label}
				</a>
			))
		}
	</div>
</footer>
<style>
	footer {
		padding: 2.2em 1em 4em 1em;
		background: linear-gradient(180deg, rgba(var(--surface), 0), rgba(var(--surface), 1));
		color: rgb(var(--text-secondary));
		text-align: center;
		border-top: 1px solid rgba(var(--border-color), 0.5);
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 0.8em;
		margin-top: 1em;
		flex-wrap: wrap;
	}
	.social-links a {
		text-decoration: none;
		color: rgb(var(--text-secondary));
		padding: 0.45rem 0.8rem;
		border: 1px solid rgba(var(--border-color), 0.8);
		border-radius: 999px;
	}
	.social-links a:hover {
		color: rgb(var(--text-primary));
		border-color: var(--accent);
	}
</style>
