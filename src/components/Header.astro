---
import { SITE_TITLE, SOCIAL_LINKS } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			{
				SOCIAL_LINKS.map((link) => (
					<a href={link.href} target="_blank" rel="noreferrer noopener" aria-label={link.label}>
						{link.label}
					</a>
				))
			}
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: rgba(var(--surface), 0.85);
		backdrop-filter: blur(10px);
		border-bottom: 1px solid rgba(var(--border-color), 0.6);
		position: sticky;
		top: 0;
		z-index: 20;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: rgb(var(--text-primary));
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
	}
	nav a {
		padding: 1em 0.5em;
		color: rgb(var(--text-primary));
		border-bottom: 3px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links {
		display: flex;
		gap: 0.4rem;
	}
	.social-links a {
		border: 1px solid rgba(var(--border-color), 0.8);
		padding: 0.4rem 0.6rem;
		margin: 0.35rem 0;
		border-radius: 999px;
		font-size: 0.8rem;
		line-height: 1;
		color: rgb(var(--text-secondary));
	}
	.social-links a:hover {
		color: rgb(var(--text-primary));
		border-color: var(--accent);
		box-shadow: 0 0 0 2px color-mix(in srgb, var(--accent) 20%, transparent);
	}
	@media (max-width: 900px) {
		nav {
			flex-wrap: wrap;
			justify-content: center;
			padding-bottom: 0.35rem;
		}
	}
</style>
